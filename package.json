    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "semantic-release": "^22.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typedoc": "^0.25.2",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "typescript": ">=5.0.4",
    "viem": ">=0.3.35"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
