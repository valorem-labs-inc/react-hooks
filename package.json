  "prettier": "@vercel/style-guide/prettier",
  "dependencies": {
    "@nickadamson/sdk": "0.0.10-dev8",
    "@tanstack/query-core": "^4.36.1",
    "@wagmi/cli": "^1.5.2",
    "viem": "^1.16.6",
    "wagmi": "^1.4.3"
  },
  "devDependencies": {
    "@tanstack/react-query": "^4.36.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^20.8.5",
    "@types/react": "^18.0.9",
